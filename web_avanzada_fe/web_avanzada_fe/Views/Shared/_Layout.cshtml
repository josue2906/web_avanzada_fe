                                      <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="InicioSesion">Iniciar Sesión</a>
                                    </li>  
                        }}

                            @{
                                if (Context.Session.GetString("Token")!=null)
