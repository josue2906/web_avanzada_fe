@model web_avanzada_fe.Entities.Empleado

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Iniciar Sesión";
}



@section Styles
{
    <link href="~/css/Login.css" rel="stylesheet" type="text/css" />
}

<div class="login">
    <h1>Iniciar Sesión</h1>
        @using (Html.BeginForm("LoginEmpleado", "Auth", FormMethod.Post, new { id="loginForm"}))
    {
        @Html.TextBoxFor(Model => Model.idEmpleado, new
   {
       id = "cedula",
       name="cedula",
       placeholder = "Cédula",
       required="required",
       onChange="VerificarEspaciosLogin()",
       @onkeypress = "return validarNumeros(event);",
       autocomplete = "off",
       maxlength = 9
   })
        @Html.Label("", (string)ViewBag.Error, new { @class = "badge badge-danger" })

        @Html.PasswordFor(Model => Model.Contrasenna, new { type = "password", id = "pass",name="pass", placeholder = "Contraseña",onChange="VerificarEspaciosLogin()"})

        <button type="submit" class="btn btn-primary btn-block btn-large">Iniciar Sesión </button>

    }
</div>

