@model web_avanzada_fe.Entities.Cita

@{
    ViewData["Title"] = "Registro de Cita";
}
<br/>
@using (Html.BeginForm("RegistrarCita", "Cita", FormMethod.Post))
{
    <div class="container mt-5">
        <div class="text-center">
            <h3>Registrar Cita</h3>
        </div>

        <div class="row">
             <div class="col-md-6 form-group">
                <label class="control-label">Mascota</label><span style="color:red">* </span>
                   @Html.DropDownListFor(model =>model.idMascota, ViewBag.Mascotas as SelectList,"Seleccione una mascota", new {@class="form-control",  required = "required"})
            </div>
            <br/>
           <div class=" col-md-6 form-group">
                <label class="control-label">Servicio</label><span style="color:red">* </span>
                @Html.DropDownListFor(model =>model.idServicio, ViewBag.Servicios as SelectList,"Seleccione un servicio", new {@class="form-control",  required = "required"})
            </div>
            <br/>
        </div>
           <div class="row">
            <div class="form-group">
                <label class="control-label">Fecha</label><span style="color:red">* </span>
                  <input type="date" asp-for="FechaCita" class="form-control" />
                  <span asp-validation-for="FechaCita" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label class="control-label">Empleado</label><span style="color:red">* </span>    
                @Html.DropDownListFor(model =>model.idEmpleado, ViewBag.Empleados as SelectList,"Seleccione un empleado", new {@class="form-control",  required = "required"})
            </div>
        </div>

        <div class="row mt-3">
            <div class="form-group">
                <input type="submit" value="Registrar Cita..." class="btn btn-success">
            </div>
        </div>
    </div>
}
